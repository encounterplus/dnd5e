{
  "debug": false,
  "spacing": 8,
  "padding": [
    16
  ],
  "type": "lazyVStack",
  "views": [
    {
      "type": "hStack",
      "spacing": 12,
      "alignment": "center",
      "views": [
        {
          "type": "image",
          "value": "{{image}}",
          "width": 60.0,
          "height": 60.0,
          "alignment": "top",
          "imageResizeMode": "aspectFill",
          "cornerRadius": 8,
          "link": "{{image}}"
        },
        {
          "type": "vStack",
          "spacing": -1,
          "views": [
            {
              "style": "title",
              "value": "{{name}}",
              "link": "https://www.google.com/search?tbm=isch&q=dnd+5e+{{name}}"
            },
            {
              "style": "subtitle",
              "value": "{{detail}}",
            },
          ]
        },
        {
          "type": "hStack",
          "spacing": 0,
          "alignment": "bottom",
          "width": -1,
          "link": "/health/data.hp",
          "views": [
            {
              "type": "label",
              "style": "hp-current",
              "alignment": "trailing",
              "value": "{{data.hp.current|default: 0}}{{data.hp.temporary|prefix: '+'}}",
              "width": -1,
            },
            {
              "type": "label",
              "style": "hp-max",
              "value": "/{{data.hp.maximum|default: 0}}",
              "width": -1,
            }
          ]
        },
        // rest button with custom action
        {
          "type": "button",
          "alignment": "center",
          "width": 24,
          "height": 24,
          "padding":[8],
          "custom": {
            "icon": "moon.zzz.fill",
          },
          "action": {
            "set": {
              "data.hp.current": {
                "attribute": "data.hp.maximum",
              },
              "data.hp.temporary": null
            }
          }
        },
        // {
        //   "type": "button",
        //   "alignment": "center",
        //   "width": 24,
        //   "height": 24,
        //   "padding":[8],
        //   "custom": {
        //     "icon": "star",
        //   },
        //   "action": {
        //     "open": {
        //       "type": "form",
        //       "partial": "character-item",
        //       "attribute": "data.items.0"
        //     }
        //   }
        // },
      ]
    },
    {
      "type": "divider",
    },
    {
      "type": "hStack",
      "spacing": 1,
      "alignment": "center",
      "views": [
        {
          "type": "vStack",
          "spacing": -1,
          "alignment": "center",
          "views": [
            {
              "style": "sheet-field-value",
              "value": "{{data.proficiencyBonus|default: 0|signed}}",
              "link": "/roll/d20{{data.proficiencyBonus|default: 0|signed}}/proficiency",
              "alignment": "center",
              "width": -1
            },
            {
              "style": "sheet-label",
              "value": "Proficiency",
              "alignment": "center",
            },
          ]
        },
        {
          "type": "vStack",
          "spacing": -1,
          "alignment": "center",
          "views": [
            {
              "style": "sheet-field-value",
              "value": "{{data.ac|default: 0}}",
              "alignment": "center",
              "action": {
                "open": {
                  "title": "Armor Class",
                  "partial": "character-armor.md"
                }
              }
            },
            {
              "style": "sheet-field-title",
              "value": "Armor Class",
              "alignment": "center",
            },
          ]
        },
        {
          "type": "vStack",
          "spacing": -1,
          "alignment": "center",
          "views": [
            {
              "style": "sheet-field-value",
              "value": "{{data.initiativeBonus|default: 0|signed}}",
              "link": "/roll/d20{{data.initiativeBonus|default: 0|signed}}/initiative",
              "alignment": "center",
            },
            {
              "style": "sheet-field-title",
              "value": "Initiative",
              "alignment": "center",
            },
          ]
        },
        {
          "type": "vStack",
          "spacing": -1,
          "alignment": "center",
          "views": [
            {
              "style": "sheet-field-value",
              "value": "{{data.race.speed.walk|default: 30|units: 'ft'}}",
              "alignment": "center",
            },
            {
              "style": "sheet-field-title",
              "value": "Speed",
              "alignment": "center",
            },
          ]
        },
      ]
    },
    {
      "type": "divider",
    },
    {
      "id": "mainTabs",
      "type": "tabs",
      "custom": {
        "buttonStyle": {
          "selected": "prominent" 
        }
      },
      "views": [
        {
          "id": "abilities",
          "title": "Abilities",
          "custom": {
            "icon": "flag.fill"
          },
          "type": "partial",
          "value": "character-abilities",
        },
        {
          "id": "skills",
          "title": "Skills",
          "custom": {
            "icon": "person.fill"
          },
          "type": "partial",
          "value": "character-skills",
        },
        {
          "id": "actions",
          "title": "Actions",
          "custom": {
            "icon": "figure.archery"
          },
          "type": "partial",
          "value": "character-actions",
        },
        {
          "id": "spells",
          "title": "Spells",
          "custom": {
            "icon": "bolt.fill"
          },
          "type": "partial",
          "value": "character-spells",
        },
        {
          "id": "items",
          "title": "Items",
          "custom": {
            "icon": "archivebox.fill"
          },
          "type": "partial",
          "value": "character-items",
        },
        {
          "id": "features",
          "title": "Features",
          "custom": {
            "icon": "list.bullet"
          },
          "type": "partial",
          "value": "character-features",
        },
        {
          "id": "other",
          "title": "Other",
          "custom": {
            "icon": "note.text"
          },
          "type": "partial",
          "value": "character-other",
        },
      ]
    },
  ],
}
