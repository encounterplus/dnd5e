{
  "debug": false,
  "spacing": 8,
  "padding": [
    16
  ],
  "views": [
    {
      "type": "hStack",
      "spacing": 8,
      "views": [
        {
          "type": "vStack",
          "spacing": -1,
          "views": [
            {
              "style": "title",
              "value": "{{name}}",
              "link": "https://www.google.com/search?tbm=isch&q=dnd+5e+{{name}}"
            },
            {
              "style": "subtitle",
              "value": "*{{data.level|map: 'SpellLevel'}}, {{data.school|map: 'SpellSchool'}}*",
            },
            {
              "style": "subtitle",
              "value": "{{detail}}",
            },
          ]
        },
        {
          "type": "image",
          "value": "/icons/spell/{{data.school}}.png",
          "height": 52,
          "custom": {
            "renderingMode": "original"
          }
        }
      ]
    },
    {
      "type": "text",
      "value": "{% include 'spell-primary.md' %}"
    },
    {
      "type": "divider"
    },
    {
      "type": "text",
      "value": "{{descr}}",
    },
    {
      "type": "text",
      "title": "Common.Notes",
      "value": "{{notes}}",
    },
    {
      "type": "image",
      "value": "{{image}}",
      "link": "{{image}}"
    },
    {
      "type": "text",
      "value": "{{footer}}"
    }, 
    {
      "type": "tags",
      "attribute": "tags"
    }
  ]
}
