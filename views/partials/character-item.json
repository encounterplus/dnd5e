{
  "type": "hStack",
  "alignment": "center",
  "spacing": 0,
  "debug": false,
  "views": [
    {
      "type": "checkbox",
      "attribute": "equipped",
      "width": 36,
      "alignment": "center"
    },
    {
      "type": "hStack",
      "alignment": "center",
      "link": "{{reference}}",
      "views": [
        {
          "type": "image",
          "value": "{{definition.imagePath}}",
          "imageResizeMode": "aspectFill",
          "cornerRadius": 6,
          "width": 34,
          "height": 34,
        },
        {
          "type": "vStack",
          "spacing": 0,
          "views": [
            {
              "value": "**{{name}}**",
              "style": "sheet-item-title"
            },
            {
              "value": "{{definition.data.type|map: 'ItemType'}}{{definition.data.rarity|map: 'ItemRarity'|prefix: ' • '}}{{definition.data.weight|units: 'lb'|prefix: ' • '|}}",
              "style": "sheet-item-detail"
            }
          ]
        },
      ]
    },
    {
      "type": "menuButton",
      "value": "**{{quantity|default: '–'}}**",
      "style": "plain",
      "alignment": "center",
      "padding": [0],
      "width": 30,
      "views": [
        {
          "type": "button",
          "title": "Increase",
          "action": {
            "set": {
              "quantity": "#{{self.quantity|default: 0}} + 1"
            }
          }
        },
        {
          "type": "button",
          "title": "Decrease",
          "action": {
            "set": {
              "quantity": "#{{self.quantity|default: 0}} - 1"
            }
          }
        },
        {
          "type": "divider",
        },
        {
          "type": "button",
          "title": "Reset",
          "action": {
            "set": {
              "quantity": null
            }
          }
        },
        {
          "type": "divider",
        },
        {
          "type": "button",
          "title": "Edit",
          "action": {
            "open": {
              "type": "form",
              "partial": "character-item",
              "attribute": "{{keyPath}}"
            }
          }
        },
      ]
    },
  ]
}