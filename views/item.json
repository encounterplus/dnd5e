{
  "debug": false,
  "spacing": 8,
  "padding": [
    16
  ],
  "views": [
    {
      "type": "vStack",
      "spacing": -1,
      "views": [
        {
          "style": "title",
          "value": "{{name}}",
          "link": "https://www.google.com/search?tbm=isch&q=dnd+5e+{{name}}"
        },
        {
          "style": "subtitle",
          "value": "*{{data.type|map: 'ItemType'}}{% if data.typeDetail %} ({{data.typeDetail}}){% endif %}, {{data.rarity|map: 'ItemRarity'}}*",
        },
        {
          "style": "subtitle",
          "value": "{{detail}} {%if data.attunement and data.attunementDetail %}{{data.attunementDetail|lowercase|brackets}}{% elif data.attunement %}{{'Item.RequiresAttunement'|l|lowercase|brackets}}{% endif %}",
        },
      ]
    },
    {
      "type": "text",
      "value": "{% include 'item-primary.md' %}"
    },
    {
      "type": "divider"
    },
    {
      "type": "text",
      "value": "{{descr}}",
    },
    {
      "type": "text",
      "title": "Common.Notes",
      "value": "{{notes}}",
    },
    {
      "type": "image",
      "value": "{{image}}",
      "link": "{{image}}"
    },
    {
      "type": "text",
      "value": "{{footer}}"
    }, 
    {
      "type": "tags",
      "attribute": "tags"
    }
  ]
}
